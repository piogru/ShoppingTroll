<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="col-12 col-md-8 col-xl-6 mx-auto d-flex flex-column align-items-center bg-white p-5 mt-5 shadow rounded">
    <h2 class="text-dark-blue mb-3 mt-3 text-center">
      Login form
    </h2>
    <div class="mb-3 col-12">
      <%= f.label :email, class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
    <div class="mb-3 col-12">
      <%= f.label :password, class: "form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>
    <div class="col-12 d-flex flex-row justify-content-between">
      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
    <%= f.submit "Log in", class: "btn btn-purple col-12 mt-4 py-2" %>
  </div>
<% end %>
